<h1><%= @sponsoredpost.name %></h1>

 <%= link_to "Edit Sponsored Post", edit_sponsored_post_path, class: 'btn btn-success' %>
 <%= link_to "Delete Sponsored Post", @sponsoredpost, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this Sponsored Post?' } %>


 <div class="row">
   <div class="col-md-8">
     <p class="lead"><%= @sponsoredpost.description %></p>

     <% @topic.posts.each do |post| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to sponsoredpost.title, sponsored_post_path(@sponsoredpost, post) %>
           </h4>
           <small>
             submitted <%= time_ago_in_words(post.created_at) %> ago <br>
             <%= post.comments.count %> Comments
           </small>
         </div>
       </div>
     <% end %>
   </div>
   <div class="col-md-4">
     <%= link_to "New Post", new_topic_post_path(@sponsoredpost), class: 'btn btn-success' %>
     <%= link_to "Delete Post", @sponsoredpost, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
   </div>
 </div>
